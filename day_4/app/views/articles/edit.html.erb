<h1>Edit Article</h1>
<%= form_with model: @article, local: true do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title, value: @article.title %>

  <%= form.label :content %>
  <%= form.text_area :content, value: @article.content %>

  <%= form.label :image %>
  <%= form.file_field :image %>

  <%= form.submit 'Update Article' %>
<% end %>
<%= link_to 'Back to Articles', articles_path %>
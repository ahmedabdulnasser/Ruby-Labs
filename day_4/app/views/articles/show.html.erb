<h1><%= @article.title %></h1>
<%= image_tag @article.image if @article.image.attached? %>
<p><%= @article.content %></p>
<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back to Articles', articles_path %> |
<%= link_to 'Report', report_article_path(@article), data: { turbo_method: :post, confirm: 'Are you sure you want to report this article?' } %>